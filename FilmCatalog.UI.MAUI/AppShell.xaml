<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FilmCatalog.UI.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:FilmCatalog.UI.MAUI.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Film Catalog">
    <TabBar>
        <ShellContent Title="Films" ContentTemplate="{DataTemplate pages:FilmsPage}" Route="Films" />
        <ShellContent Title="Actors" ContentTemplate="{DataTemplate pages:ActorsPage}" Route="Actors" />
        <ShellContent Title="Categories" ContentTemplate="{DataTemplate pages:CategoriesPage}" Route="Categories" />
        <ShellContent Title="Directors" ContentTemplate="{DataTemplate pages:DirectorsPage}" Route="Directors" />
        <ShellContent Title="Formats" ContentTemplate="{DataTemplate pages:FormatsPage}" Route="Formats" />        
    </TabBar>
</Shell>
